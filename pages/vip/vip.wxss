/* pages/vip/vip.wxss */

.userinfo {
  display: block;
  margin-bottom: 10px;
  width:100%;
  height:100px;
  background: #CC9933;
  color: #990033;
  overflow: hidden;
}

.head_img{
  width:60px;
  height:60px;
  float:left;
  margin-left: 20px;
}
.userinfo-avatar {
  width: 60px;
  height: 60px;
  
  border-radius: 50%;
  
  display: inline-block;
}
.head_info{
  width:70%;
  height:60px;
  float: left;
  padding-left: 20px;
  font-size: 16px;
  line-height: 30px;
}
.head_title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #CC9933;
  color: #fff;
  text-align: center;
  font-size: 16px;
  padding-bottom: 10px;
}

.middle{
  width: 100%;
  height: 250px;
}

.middle_title{
  width: 100%;
  height: 50px;
  border-bottom: 1px #996600 solid;
}

.middle_title_big{
  font-size: 18px;
  width: 100%;
  height: 30px;
  text-align: center;
}

.middle_title_small{
  font-size: 14px;
  width: 100%;
  height: 30px;
  text-align: center;
  color: #FF6600;
}

.middle_content{
  width: 100%;
  height: 180px;
  line-height: 180px;
  text-align: center;
  border-bottom: 1px #996600 solid;
}

.bottom{
  width: 100%;
  height: 40px;
  background: #FF9900;
  color: #fff;
  line-height: 40px;
  text-align: center;
}