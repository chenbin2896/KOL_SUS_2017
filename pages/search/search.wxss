/* pages/search/search.wxss */
.search{
  width:90%;
  height: 30px;
  margin: 0 auto;
  background: #fff;

}

.search_left{
  width:20%;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  height: 30px;
  float: left;
  border-right: 1px grey solid;
}

.search_input{
  width: 61%;
  padding-left: 10px;
  height: 26px;
  padding-top: 4px;
  
  font-size: 14px;
  
  float: left;
  border-right: 1px grey solid;
}

.search_btn{
  width:15%;
  height: 30px;
  text-align: center;
  vertical-align: center;
  background: #f2f2f2;
  float: left;
}

.image{
  width: 100%;
  height: 100%;
 
}
.option_box{
  position: absolute;
  width:17%;
  
  border-right: 1px grey solid;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  
  text-align: center;
} 

.option{
  width:100%;
  display: block;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  border-bottom: 1px solid #efefef;
  
}

.content{
  width:100%;
  
}

.head{
  width:100%;
  height: 60px;
  background: #3490d3;
  padding-top: 20px;
}

.list_nav{
  width: 96%;
  padding-left: 2%;
  padding-right: 2%;
  height: 30px;
  font-size: 12px;
  color: grey;
  border-bottom: 1px grey solid;
}

.list_nav_item{
  width:32%;
  height: 30px;
  
  line-height: 30px;
  float: left;
}

.info{
  width:100%;
  height: 20px;
  background: #f2f2f2;
  font-size: 10px;
  line-height: 20px;
}

.list_view{
  width: 96%;
  height: 300px;
  padding-left: 2%;
  padding-right: 2%;
  overflow: auto;
}

.list_left{
  width:10%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  float: left;
  font-size: 14px;
}

.list_image{
  width:30px;
  height: 30px;
  margin-top: 8px;
  float: left;
}

.list_middle{
  width:65%;
  height: 45px;
  line-height: 45px;
  text-align: left;
  float: left;
  font-size: 14px;
}

.list_right{
  width:10%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  float: right;
  font-size: 14px;
}